{{#extends "base"}}
{{#block "title"}}Buy Food{{/block}}
{{#block "content"}}
<form method="POST">
    <div>
    <label>Enter the food name</label>
    <input type="text" class="form-control" name="foodName" value="{{foodRecord.foodName}}">
    </div>
    <div>
    <label>Enter the calories</label>
    <input type="text" class="form-control" name="calories" value="{{foodRecord.calories}}">
    </div>

    <div>
        <label>Select Meal:</label>

        <input type="radio" class="form-check-input" name="meal" value="breakfast" {{#eq foodRecord.meal "breakfast"}}checked{{/eq}}>
        <label class="form-check-label">Breakfast</label>

        <input type="radio" class="form-check-input" name="meal" value="lunch" {{#eq foodRecord.meal "lunch"}}checked{{/eq}}>
        <label class="form-check-label">Lunch</label>

        <input type="radio" class="form-check-input" name="meal" value="dinner" {{#eq foodRecord.meal "dinner"}}checked{{/eq}}>
        <label class="form-check-label">Dinner</label>

        <input type="radio" class="form-check-input" name="meal" value="supper" {{#eq foodRecord.meal "supper"}}checked{{/eq}}>
        <label class="from-check-label">Supper</label>
    </div>

    <div>
        <label>Select Tags:</label>

        <input type="checkbox" class="'form-check-input" name="tags" value="home-cooked" {{#inArray foodRecord.tags "home-cooked"}}checked{{/inArray}}>
        <label class="form-check-label">Home Cooked</label>

        <input type="checkbox" class="form-check-input" name="tags" value="oily" {{#inArray foodRecord.tags "oily"}}checked{{/inArray}}>
        <label class="form-check-label">Oily</label>

        <input type="checkbox" class="form-check-input" name="tags" value="vegan" {{#inArray foodRecord.tags "vegan"}}checked{{/inArray}}>
        <label class="form-check-label">Vegan</label>

        <input type="checkbox" class="form-check-input" name="tags" value="healthy" {{#inArray foodRecord.tags "healthy"}}checked{{/inArray}}>
        <label class="form-check-label">Healthy</label>
    </div>
    <input type="submit" class="btn btn-primary mt-3" values="Add Food">
</form>
{{/block}}
{{/extends}}