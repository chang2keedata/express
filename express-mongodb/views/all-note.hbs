{{#extends "base"}}
{{#block "content"}}
<h1>{{foodRecord.foodName}} <a href="/{{foodRecord._id}}/note/add" class="btn btn-secondary">Add Note</a></h1>
{{#each foodRecord.note}}
<div class="card">
    <div class="card-body">
        {{this.comment}}
        <div class="mt-3">
            <a href="/{{../foodRecord._id}}/note/{{this._id}}/update" class="btn btn-primary">Update</a>
            <a href="/{{../foodRecord._id}}/note/{{this._id}}/delete" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>
{{/each}}
{{/block}}
{{/extends}}