{{#extends "base"}}

{{#block "content"}}
<form method="POST">
<div>
    <label>Description</label>
    <input type="text" name="description" class="form-control" value="{{description}}" />
</div>
<div>
    <label>Food</label>
    <input type="text" name="food" class="form-control" placeholder="Enter food.." value="{{food}}" />
</div>
<div>
    <label>Date Time</label>
    <input type="datetime-local" name="datetime" class="form-control" value="{{datetime}}" >
</div>
<input type="submit" class="btn btn-primary mt-3" value="Post Food">
</form>


{{/block}}


{{/extends}}